#!/usr/bin/env ruby

require 'scrmbale'

class GameApp
  TIME_LIMIT = 120

  def initialize
    @game = Scrmbale::Game.new(load_puzzles)
  end

  def load_puzzles
    f = File.open(File.expand_path("../../data/puzzles.json", __FILE__), "r")
    puzzles = f.read
    f.close
    return puzzles
  end

  def quit
    puts "\nYour final score: #{@game.score}"
    exit
  end

  def print_board
    @game.words.each do |w|
      if w.discovered?
        puts "  " + w.text.upcase.split("").join(" ")
      else
        puts "  " + ("_" * w.text.length).split("").join(" ")
      end
    end
  end

  def game_over
    puts "You didn't get the big word! Game over."
    quit
  end

  def prompt(text)
    ('%s> ' % text).display
    gets.chomp
  end

  def run
    trap "SIGINT" do
      quit
    end

    loop do # Game
      catch :round do
        start = Time.now.to_i
        loop do # Puzzle
          print_board
          time_remaining = TIME_LIMIT - (Time.now.to_i - start)
          if (time_remaining <= 0)
            puts "Time's up!"
            game_over unless @game.big_word_complete?
            prompt('Press enter to start next round')
            throw :round
          end
          input = prompt('[Score: %s] %s (%ss)> ' % [@game.score, @game.letters, time_remaining])
          if input.empty?
            @game.shuffle
          else
            if (time_remaining <= 0)
              puts "Time's up!"
              game_over unless @game.big_word_complete?
              prompt('Press enter to start next round')
              throw :round
            else
              if @game.guess(input)
                puts "Great!"
                puts "You got the big word!" if input.length == 6
                if @game.complete?
                  puts "You got all the words!"
                  prompt('Press enter to start next round')
                  throw :round
                end
              else
                puts "No good."
              end
            end
          end
        end
      end
      @game.next_round
    end
  end
end

puts "Use Ctrl+C to exit."
GameApp.new.run
